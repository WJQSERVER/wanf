{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "WANF",
  "scopeName": "source.wanf",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#definitions"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#entities"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#constants"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.wanf",
          "match": "//.*"
        },
        {
          "name": "comment.block.wanf",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.wanf",
          "match": "\\b(import)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.wanf",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.wanf",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.wanf",
          "begin": "'",
          "end": "'"
        },
        {
          "name": "string.quoted.raw.wanf",
          "begin": "`",
          "end": "`"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.wanf",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.numeric.wanf",
          "match": "\\b[0-9]+(\\.[0-9]+)?(ns|us|ms|s|m|h)?\\b"
        }
      ]
    },
    "entities": {
      "patterns": [
        {
          "name": "entity.name.function.wanf",
          "match": "\\b(env)(?=\\()"
        }
      ]
    },
    "definitions": {
      "patterns": [
        {
          "comment": "匹配 'var' 关键字和其后定义的变量名",
          "match": "\\b(var)\\s+([a-zA-Z_][\\p{L}\\p{N}_\\p{P}\\p{S}]*)\\b",
          "captures": {
            "1": { "name": "keyword.control.wanf" },
            "2": { "name": "variable.other.definition.wanf" }
          }
        },
        {
          "comment": "匹配块类型, 如 'server' 或 'database'",
          "match": "^\\s*([a-zA-Z_][a-zA-Z0-9_]*)(?=\\s*(\\{|\"))",
          "captures": {
            "1": { "name": "entity.name.type.wanf" }
          }
        },
        {
          "comment": "匹配块内部的配置键 (key)",
          "match": "([a-zA-Z_][a-zA-Z0-9_]*)(?=\\s*=)",
          "captures": {
            "1": { "name": "entity.name.tag.wanf" }
          }
        }
      ]
    }
  }
}